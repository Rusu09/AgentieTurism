@page
@model AgentieTurism.Pages.Reviews.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Review-uri</h1>

<p>
    <a asp-page="Create" class="btn btn-custom-create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].Vacation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].Vacation.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Review) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Vacation.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vacation.Location.FullLocation)
            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                <a asp-page="./Edit" class="btn btn-custom-edit" asp-route-id="@item.ID">Edit</a>
                <a asp-page="./Details" class="btn btn-custom-details" asp-route-id="@item.ID">Details</a>
                <a asp-page="./Delete" class="btn btn-custom-delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
