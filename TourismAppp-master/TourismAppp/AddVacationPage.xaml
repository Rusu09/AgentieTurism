<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TourismAppp.AddVacationPage"
             Title="AddVacationPage">
    <ScrollView>
        <StackLayout Padding="20">
            <Label Text="Add a New Vacation" FontSize="24" HorizontalOptions="Center" />

            <Entry x:Name="TitleEntry" Placeholder="Vacation Title" />
            <Entry x:Name="DescriptionEntry" Placeholder="Description" />
            <Entry x:Name="LocationEntry" Placeholder="Location" />
            <Entry x:Name="PriceEntry" Placeholder="Price" Keyboard="Numeric" />
            <Entry x:Name="DurationDaysEntry" Placeholder="Duration (Days)" Keyboard="Numeric" />
            <Label Text="Start Date" />
            <DatePicker x:Name="StartDatePicker" />
            <Label Text="End Date" />
            <DatePicker x:Name="EndDatePicker"  />

            <Button Text="Add Vacation" Clicked="OnAddVacationClicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>