<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TourismAppp.VacationDetailsPage"
             Title="VacationDetailsPage">
    <ScrollView>
        <StackLayout Padding="20">
            <Label Text="Vacation Details" FontSize="24" HorizontalOptions="Center" />

            <Label Text="Title:" FontAttributes="Bold" />
            <Label x:Name="TitleLabel" FontSize="18" />

            <Label Text="Description:" FontAttributes="Bold" />
            <Label x:Name="DescriptionLabel" FontSize="18" />

            <Label Text="Location:" FontAttributes="Bold" />
            <Label x:Name="LocationLabel" FontSize="18" />

            <Label Text="Price:" FontAttributes="Bold" />
            <Label x:Name="PriceLabel" FontSize="18" />

            <Label Text="Duration (Days):" FontAttributes="Bold" />
            <Label x:Name="DurationLabel" FontSize="18" />

            <Label Text="Start Date:" FontAttributes="Bold" />
            <Label x:Name="StartDateLabel" FontSize="18" />

            <Label Text="End Date:" FontAttributes="Bold" />
            <Label x:Name="EndDateLabel" FontSize="18" />

            <Button Text="Edit Vacation" Clicked="OnEditVacationClicked" BackgroundColor="LightBlue" IsVisible="False" x:Name="EditButton"/>
            <Button Text="Delete Vacation" Clicked="OnDeleteVacationClicked" BackgroundColor="Red" TextColor="White" IsVisible="False" x:Name="DeleteButton"/>
            <Button Text="Book Now" Clicked="OnBookNowClicked" />
            <Button Text="Go Back" Clicked="OnGoBackClicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>